{
    "workflowApiVersion": "1.1",
    "metaData": {
        "icon": "/images/icon.png",
        "iconSmall": "/images/iconSmall.png",
        "category": "message"        
    },
    "type": "REST",
    "lang": {
        "en-US": {
            "name": "Custom Activity",
          "description": "Custom Journey Builder Activity",
          "step1Label": "Configure Activity"
        }
    },
    "arguments": {
        "execute": {
           "inArguments":[
				{
                    "emailAddress": "{{Contact.Attribute.CustomActivity.EmailAddress}}"
                }									
			],
          "outArguments": [],
          "url": "/journeybuilder/execute",
           "verb": "POST",
            "body": "",
            "header": "",
            "format": "json",
            "useJwt": true,
            "timeout": 10000
        }
    },
    "configurationArguments": {
      "applicationExtensionKey": "f7d5ce4a-d86e-4ba3-97c8-8b5252bccb73",
      "save": {
        "url": "/journeybuilder/save",
          "verb": "POST",
        "useJwt": true
       },
       "publish": {
        "url": "/journeybuilder/publish",
           "verb": "POST",
        "useJwt": true
       },
      "stop": {
        "url": "/journeybuilder/stop",
           "verb": "POST",
        "useJwt": true
      },
      "validate": {
        "url": "/journeybuilder/validate",
        "verb": "POST",
        "useJwt": true
      }
    },
    "wizardSteps": [
      { "label": "Step 1", "key": "step1" },
      { "label": "Step 2", "key": "step2" },
      { "label": "Step 3", "key": "step3" },
      { "label": "Step 4", "key": "step4", "active": false }
   ],
    "userInterfaces": {
        "configModal": {
            "height": 400,
            "width": 1000,
          "fullscreen": false
        }
    },
    "schema": {
      "arguments": {
          "execute": {
              "inArguments": [
                  {
                      "phoneNumber": {
                          "dataType": "Phone",
                          "isNullable": false,
                          "direction": "in"   
                      }
                  },
                  {
                      "emailAddress": {
                          "dataType": "Email",
                          "isNullable": false,
                          "direction": "in"
                      }
                  }
              ],
              "outArguments": [
                  {
                      "foundSignupDate": {
                          "dataType": "Date",
                          "direction": "out",
                          "access": "visible"
                      }
                  }
              ]
          }
      }
  }
}